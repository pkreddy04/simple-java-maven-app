pipeline {
	agent any
	
    stages {
        stage('Build') {
            steps {
                bat 'mvn -e -X -B -DskipTests clean package' 
            }
        }
		stage('Test') { 
            steps {
                sh 'mvn test' 
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml' 
                }
            }
        }
    }
}